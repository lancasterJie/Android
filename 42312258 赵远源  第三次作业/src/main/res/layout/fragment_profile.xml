<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:padding="16dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="场景A: 填写后跳转 DetailActivity"
			android:textSize="16sp" />

		<EditText
			android:id="@+id/et_username"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="用户名" />

		<EditText
			android:id="@+id/et_age"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:hint="年龄" />

		<EditText
			android:id="@+id/et_student"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="是否学生（true/false 或 是/否）" />

		<Button
			android:id="@+id/btn_launch_detail"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="跳转 DetailActivity"
			android:layout_marginTop="12dp" />

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#DDDDDD"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="16dp" />

		<TextView
			android:id="@+id/tv_from_a"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="场景C：这里显示来自 Discover -> Activity -> Profile 的信息"
			android:textSize="16sp" />

	</LinearLayout>
</ScrollView>


