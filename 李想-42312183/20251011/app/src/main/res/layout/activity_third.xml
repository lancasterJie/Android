<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <!-- 1. 标识当前页面的文本 -->
    <TextView
        android:id="@+id/tv_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这里是 ThirdActivity"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp" />

    <!-- 2. 输入框：让用户输入要返回的内容 -->
    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入要返回的内容"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_third"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp" />

    <!-- 3. “返回结果”按钮：点击后将输入框内容返回给 MainActivity -->
    <Button
        android:id="@+id/btn_return_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回结果"
        app:layout_constraintTop_toBottomOf="@id/et_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- 4. “返回取消”按钮：点击后返回“取消”状态给 MainActivity -->
    <Button
        android:id="@+id/btn_return_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回取消"
        app:layout_constraintTop_toBottomOf="@id/btn_return_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp" />

    <!-- 保留你原来的“返回 SecondActivity”按钮（如果还需要的话） -->
    <Button
        android:id="@+id/btn_back_to_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回 SecondActivity"
        app:layout_constraintTop_toBottomOf="@id/btn_return_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>