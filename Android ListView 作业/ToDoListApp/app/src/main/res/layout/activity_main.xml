<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- 应用标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/holo_blue_light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="待办事项清单"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@android:color/white" />

        <!-- 任务统计 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@android:color/holo_blue_dark">

            <TextView
                android:id="@+id/tvTotalTasks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="总计: 0"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:alpha="0.3" />

            <TextView
                android:id="@+id/tvCompletedTasks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="已完成: 0"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:alpha="0.3" />

            <TextView
                android:id="@+id/tvPendingTasks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="待完成: 0"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- 操作按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnAddTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加任务"
            android:drawableStart="@android:drawable/ic_menu_add"
            android:backgroundTint="@android:color/holo_green_light"
            android:layout_marginEnd="4dp"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:id="@+id/btnSortTasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="排序"
            android:drawableStart="@android:drawable/ic_menu_sort_by_size"
            android:backgroundTint="@android:color/holo_blue_light"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:id="@+id/btnClearCompleted"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清除已完成"
            android:drawableStart="@android:drawable/ic_menu_delete"
            android:backgroundTint="@android:color/holo_orange_light"
            android:layout_marginStart="4dp"
            style="@style/Widget.AppCompat.Button.Colored" />
    </LinearLayout>

    <!-- 任务列表容器 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 任务列表 -->
        <ListView
            android:id="@+id/taskListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:padding="8dp" />

        <!-- 空列表提示 -->
        <TextView
            android:id="@+id/tvEmptyList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="暂无待办事项\n点击下方按钮添加任务"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <!-- 底部操作栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/darker_gray">

        <TextView
            android:id="@+id/tvActionHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示：点击任务查看详情，长按任务删除"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvLastUpdated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>