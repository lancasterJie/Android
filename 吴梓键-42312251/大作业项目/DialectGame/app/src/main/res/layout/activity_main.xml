<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <!-- 1. 顶部标题栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="2dp"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="9:41"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="APP首页"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/av_user"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_user"
            android:contentDescription="个人中心" />
    </RelativeLayout>

    <!-- 2. 热门话题横向滚动栏 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="热门话题"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="方言探索"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="交流访果"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="更多"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 3. 帖子列表+悬浮按钮容器（FrameLayout实现覆盖） -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 帖子列表RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_blog_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:padding="12dp"
            android:clipToPadding="false" />

        <!-- 悬浮加号按钮（右下角） -->
        <ImageView
            android:id="@+id/iv_add_post"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:background="@drawable/fab_bg"
            android:src="@drawable/ic_add"
            android:contentDescription="发布新帖子"
            android:clickable="true"
            android:focusable="true"
            android:elevation="6dp"
            app:tint="@color/white" />
    </FrameLayout>

    <!-- 4. 底部Tab栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <!-- 首页Tab（选中状态） -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:contentDescription="首页"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="首页"
                android:textColor="#4285F4"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- AI对话Tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goto_chat"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_ai_chat"
                android:contentDescription="AI对话"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="AI对话"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- 方言解密Tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goto_game"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_game"
                android:contentDescription="方言解密"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="方言解密"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- 游戏图鉴Tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goto_album"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_book"
                android:contentDescription="游戏图鉴"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="游戏图鉴"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>