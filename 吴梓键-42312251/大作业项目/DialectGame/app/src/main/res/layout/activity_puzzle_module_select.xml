<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/tv_module_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前谜题："
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_puzzle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="@color/card_bg"
        android:layout_marginBottom="32dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请完成以下两个模块："
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <!-- 翻译模块 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_translation_module"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="翻译解密"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_translation_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- 语音模块 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <Button
            android:id="@+id/btn_voice_module"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="语音解密"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_voice_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- 奖励按钮（两个模块都完成才显示） -->
    <Button
        android:id="@+id/btn_go_reward"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="领取奖励"
        android:textSize="18sp"
        android:background="@color/primary"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="返回关卡选择"
        android:layout_marginTop="16dp"/>

</LinearLayout>